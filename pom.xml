        </dependency>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <version>4.4.0</version>
        </dependency>

    </dependencies>


    <profiles>
        <profile>
            <id>mac</id>
            <properties>
                <current_os>mac</current_os>
            </properties>
        </profile>

        <profile>
            <id>windows</id>
            <properties>
                <current_os>windows</current_os>
            </properties>
        </profile>
        <profile>
            <id>headless</id>
            <properties>
                <chrome.config>src/main/resources/chromeSettings/headless.yaml</chrome.config>
            </properties>
        </profile>
    </profiles>

</project>
