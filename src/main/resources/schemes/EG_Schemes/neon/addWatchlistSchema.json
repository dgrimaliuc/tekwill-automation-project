{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "title": {
        "type": "string"
      },
      "tagline": {
        "type": "string"
      },
      "image": {
        "type": "string",
        "format": "uri"
      },
      "mediaType": {
        "type": "string",
        "enum": [
          "movie",
          "tv",
          "other"
        ]
      }
    },
    "required": [
      "id",
      "title",
      "image",
      "mediaType"
    ]
  }
}
